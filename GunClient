local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:WaitForChild("HumanoidRootPart")
local humanoid = character:WaitForChild("Humanoid")

local flySpeed = 5  -- T·ªëc ƒë·ªô m·∫∑c ƒë·ªãnh
local maxFlySpeed = 50 -- Gi·ªõi h·∫°n t·ªëc ƒë·ªô
local acceleration = 2  -- T·ªëc ƒë·ªô tƒÉng d·∫ßn

-- Bi·∫øn theo d√µi ph√≠m ƒë∆∞·ª£c nh·∫•n
local moveKeys = {
    W = false,
    A = false,
    S = false,
    D = false
}

-- üöÄ T·∫°o BodyVelocity v√† BodyGyro
local bodyVelocity = Instance.new("BodyVelocity")
bodyVelocity.MaxForce = Vector3.new(4000, 4000, 4000)
bodyVelocity.Parent = humanoidRootPart

local bodyGyro = Instance.new("BodyGyro")
bodyGyro.MaxTorque = Vector3.new(9e9, 9e9, 9e9)
bodyGyro.Parent = humanoidRootPart

humanoid.PlatformStand = true

-- X·ª≠ l√Ω input
UserInputService.InputBegan:Connect(function(input)
    if input.KeyCode == Enum.KeyCode.W then
        moveKeys.W = true
    elseif input.KeyCode == Enum.KeyCode.A then
        moveKeys.A = true
    elseif input.KeyCode == Enum.KeyCode.S then
        moveKeys.S = true
    elseif input.KeyCode == Enum.KeyCode.D then
        moveKeys.D = true
    end
end)

UserInputService.InputEnded:Connect(function(input)
    if input.KeyCode == Enum.KeyCode.W then
        moveKeys.W = false
    elseif input.KeyCode == Enum.KeyCode.A then
        moveKeys.A = false
    elseif input.KeyCode == Enum.KeyCode.S then
        moveKeys.S = false
    elseif input.KeyCode == Enum.KeyCode.D then
        moveKeys.D = false
    end
end)

RunService.RenderStepped:Connect(function()
    -- Gi·ªØ nh√¢n v·∫≠t th·∫≥ng v·ªõi h∆∞·ªõng camera
    bodyGyro.CFrame = workspace.CurrentCamera.CFrame

    -- L·∫•y h∆∞·ªõng camera
    local cameraCF = workspace.CurrentCamera.CFrame
    
    -- T√≠nh to√°n vector di chuy·ªÉn d·ª±a tr√™n ph√≠m ƒë∆∞·ª£c nh·∫•n
    local moveVector = Vector3.new(0, 0, 0)
    
    if moveKeys.W then
        moveVector = moveVector + cameraCF.LookVector
    end
    if moveKeys.S then
        moveVector = moveVector - cameraCF.LookVector
    end
    if moveKeys.A then
        moveVector = moveVector - cameraCF.RightVector
    end
    if moveKeys.D then
        moveVector = moveVector + cameraCF.RightVector
    end
    
    -- Chu·∫©n h√≥a vector n·∫øu c√≥ di chuy·ªÉn
    if moveVector.Magnitude > 0 then
        moveVector = moveVector.Unit
        flySpeed = math.min(flySpeed + acceleration, maxFlySpeed)
    else
        flySpeed = 5
    end
    
    -- √Åp d·ª•ng v·∫≠n t·ªëc
    bodyVelocity.Velocity = moveVector * flySpeed
end)
